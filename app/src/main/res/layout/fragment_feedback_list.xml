<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_feedback_history_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_padding_big"
        android:text="@string/feedback_history_empty" />

    <com.sds.android.ttpod.widget.StateView
        android:id="@+id/feedback_list_loadingview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:failed_view="@layout/loadingview_failed"
        app:success_view="@layout/musiccircle_private_message_chatting_list" />
</LinearLayout>
