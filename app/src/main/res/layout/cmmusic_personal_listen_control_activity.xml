<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cmmusic_page_background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/persional_listen_not_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/cmmusic_page_background"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="100dp"
        android:visibility="visible">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/cmmusic_datanotfind" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:text="@string/notfindbyitem"
            android:textColor="#9f9f9f"
            android:textSize="14sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/list_persionpage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alwaysDrawnWithCache="true"
        android:background="@drawable/cmmusic_page_background"
        android:cacheColorHint="#00000000"
        android:divider="#c7dae1"
        android:dividerHeight="1px"
        android:fadingEdge="none"
        android:listSelector="#00000000"
        android:scrollingCache="false" />
</LinearLayout>
