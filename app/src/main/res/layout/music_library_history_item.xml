<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="66dp" android:layout_height="wrap_content">
    <com.sds.android.ttpod.widget.SquareImageView android:id="@+id/item_picture" android:layout_width="match_parent" android:layout_height="66dp" android:src="@drawable/img_background_song_publish" android:scaleType="centerCrop"/>
    <View android:id="@+id/item_click_view" android:background="@drawable/xml_find_song_list_selector" android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignLeft="@+id/item_picture" android:layout_alignTop="@+id/item_picture" android:layout_alignRight="@+id/item_picture" android:layout_alignBottom="@+id/item_picture"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/item_picture" android:layout_alignLeft="@+id/item_picture" android:layout_alignRight="@+id/item_picture">
        <ImageView android:id="@+id/item_type_icon" android:visibility="gone" android:layout_width="18dp" android:layout_height="18dp"/>
        <TextView android:textSize="14sp" android:textColor="#1b3b43" android:gravity="center_horizontal" android:id="@+id/item_name" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="4dp" android:singleLine="true"/>
    </LinearLayout>
</RelativeLayout>
