<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_pager_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.sds.android.ttpod.widget.FreezableViewPager
        android:id="@+id/sliding_pager_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/tab_label_height" />

    <com.sds.android.ttpod.widget.SlidingTabHost
        android:id="@+id/sliding_pager_title"
        style="@style/SlidingTabHost"
        app:indicatorColor="#b1e6fe"
        app:indicatorHeight="@dimen/tab_indicator_height"
        app:tabHeight="@dimen/tab_label_height"
        app:tabPaddingLeftRight="18dp" />
</RelativeLayout>
