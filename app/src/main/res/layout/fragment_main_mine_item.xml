<?xml version="1.0" encoding="utf-8"?>
<com.sds.android.ttpod.widget.RatioFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="148dp"
    android:layout_height="50dp"
    android:background="#88ffffff"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    app:design_width="148dp"
    app:ratio_height="100"
    app:ratio_width="296"
    app:scale_child="true">

    <com.sds.android.ttpod.common.widget.IconTextView
        android:id="@+id/itv_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_gravity="top|left"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="108dp"
        android:layout_marginBottom="5dp"
        android:background="@color/mask_background_color"
        android:padding="12dp" />

    <TextView
        android:id="@+id/text_title"
        style="@style/ListView_Item_Title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top|left"
        android:layout_marginLeft="46dp"
        android:layout_marginRight="20dp"
        android:duplicateParentState="true"
        android:gravity="center"
        android:text="title"
        android:textColor="@color/xml_fragment_main_mine_item_title"
        android:textSize="18dp" />

    <com.sds.android.ttpod.common.widget.IconTextView
        android:id="@+id/new_flag"
        android:layout_width="9dp"
        android:layout_height="9dp"
        android:layout_gravity="top|left"
        android:layout_marginLeft="126dp"
        android:layout_marginTop="21dp"
        android:layout_marginRight="13dp"
        android:layout_marginBottom="20dp"
        android:scaleType="centerInside"
        android:visibility="invisible"
        app:text="@string/icon_dot" />
</com.sds.android.ttpod.widget.RatioFrameLayout>
