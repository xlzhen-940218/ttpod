<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="86dp"
    android:background="@color/backgroundcolor_white"
    android:orientation="horizontal"
    android:paddingBottom="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="2dp"
        android:layout_toLeftOf="@+id/btn_set_default">

        <ImageView
            android:id="@+id/img_persionlistdefault"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/cmmusic_default_false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_persionlistsongname"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingLeft="4dp"
                android:paddingTop="8dp"
                android:paddingBottom="1dp"
                android:textColor="#334046"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">

                <TextView
                    android:id="@+id/text_persionlistsonger"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="1dp"
                    android:maxLines="1"
                    android:paddingLeft="6dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="8dp"
                    android:textColor="#909da2"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/text_timeout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="1dp"
                    android:maxLines="1"
                    android:paddingLeft="6dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="8dp"
                    android:textColor="#909da2"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_set_default"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="18dp"
        android:background="@drawable/cmmusic_btn_setdefault"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false" />
</RelativeLayout>
