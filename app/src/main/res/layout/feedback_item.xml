<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:paddingTop="8dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="16sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/tv_feedback_status" android:layout_width="80dp" android:layout_height="36dp" android:layout_marginRight="18dp" android:text="@string/feedback_solved" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    <RelativeLayout android:id="@+id/feedback_title_group" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/tv_feedback_status">
        <com.sds.android.ttpod.common.widget.IconTextView android:id="@+id/new_flag" android:visibility="visible" android:layout_width="8dp" android:layout_height="8dp" android:layout_marginLeft="5dp" android:scaleType="centerInside" android:layout_centerVertical="true" app:text="@string/icon_dot"/>
        <TextView android:textSize="16sp" android:textColor="#333" android:id="@+id/tv_feedback_topic" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="18dp" android:text="@string/app_name" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <TextView android:textSize="14sp" android:textColor="#999" android:id="@+id/tv_feedback_update_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="18dp" android:layout_marginTop="@dimen/common_margin" android:text="@string/app_name" android:layout_below="@+id/feedback_title_group"/>
</RelativeLayout>
