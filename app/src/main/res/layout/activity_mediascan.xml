<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Activity_Background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearlayout_mediascan_footer"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/button_mediascan_custom"
            style="@style/TextView_MediaScan_Bottom"
            android:drawableTop="@drawable/img_textview_mediascan_custom"
            android:text="@string/mediascan_custom" />

        <TextView
            android:id="@+id/button_mediascan_wifi"
            style="@style/TextView_MediaScan_Bottom"
            android:drawableTop="@drawable/img_textview_mediascan_wifi"
            android:text="@string/mediascan_wifi" />

        <TextView
            android:id="@+id/button_mediascan_setting"
            style="@style/TextView_MediaScan_Bottom"
            android:drawableTop="@drawable/img_textview_mediascan_setting"
            android:text="@string/mediascan_setting" />
    </LinearLayout>

    <TextView
        android:id="@+id/button_mediascan_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearlayout_mediascan_footer"
        android:layout_centerHorizontal="true"
        android:background="@drawable/xml_background_button_blue"
        android:drawableRight="@drawable/img_textview_mediascan_start"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:text="@string/mediascan_start"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_mediascan_start"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="centerInside"
        android:src="@drawable/img_mediascan_logo" />
</RelativeLayout>
