<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_list_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="bottom">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:layout_width="1dp"
                android:layout_height="8dp"
                android:layout_alignParentBottom="true"
                android:background="#292d2f" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:layout_width="1dp"
                android:layout_height="4dp"
                android:layout_alignParentBottom="true"
                android:background="#292d2f" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:layout_width="1dp"
                android:layout_height="8dp"
                android:layout_alignParentBottom="true"
                android:background="#292d2f" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:layout_width="1dp"
                android:layout_height="4dp"
                android:layout_alignParentBottom="true"
                android:background="#292d2f" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:layout_width="1dp"
                android:layout_height="8dp"
                android:layout_alignParentBottom="true"
                android:background="#292d2f" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:layout_width="1dp"
                android:layout_height="12dp"
                android:layout_alignParentBottom="true"
                android:background="#292d2f" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:layout_width="1dp"
                android:layout_height="8dp"
                android:layout_alignParentBottom="true"
                android:background="#292d2f" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:layout_width="1dp"
                android:layout_height="4dp"
                android:layout_alignParentBottom="true"
                android:background="#292d2f" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:layout_width="1dp"
                android:layout_height="8dp"
                android:layout_alignParentBottom="true"
                android:background="#292d2f" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:layout_width="1dp"
                android:layout_height="4dp"
                android:layout_alignParentBottom="true"
                android:background="#292d2f" />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="8dp"
            android:layout_alignParentBottom="true"
            android:background="#292d2f" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/seekbar_channel_balance"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="4dp"
        android:max="10"
        android:maxHeight="28dp"
        android:progressDrawable="@drawable/xml_progressbar_effect_balance"
        android:thumb="@drawable/img_background_seekbar_thumb_channel_balance"
        android:thumbOffset="0dp" />
</RelativeLayout>
