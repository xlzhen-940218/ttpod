<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.sds.android.ttpod.widget.SquareImageView
        android:id="@+id/iv_pic"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:scaleType="centerCrop" />

    <View
        android:id="@+id/item_click_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/iv_pic"
        android:layout_alignTop="@+id/iv_pic"
        android:layout_alignRight="@+id/iv_pic"
        android:layout_alignBottom="@+id/iv_pic"
        android:background="@drawable/xml_find_song_list_selector"
        android:clickable="true" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:singleLine="false"
        android:textColor="#ffffff"
        android:textSize="24sp" />
</RelativeLayout>
