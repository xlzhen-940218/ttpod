<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:paddingBottom="10dp">

    <com.sds.android.ttpod.widget.RoundedImageView
        android:id="@+id/item_picture"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_background_song_publish"
        app:Image_border_color="@color/rounded_image_corner"
        app:Image_border_width="@dimen/rounded_image_border"
        app:corner_radius="4dp"
        app:image_ratio="1" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_picture"
        android:layout_alignLeft="@+id/item_picture"
        android:layout_alignRight="@+id/item_picture"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:textColor="#444a50"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_artist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_name"
        android:layout_alignLeft="@+id/item_picture"
        android:layout_alignRight="@+id/item_picture"
        android:layout_marginTop="2dp"
        android:singleLine="true"
        android:textColor="#a1a4a7"
        android:textSize="12sp" />
</RelativeLayout>
