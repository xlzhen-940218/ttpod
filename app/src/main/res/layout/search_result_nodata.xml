<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_background"
    android:gravity="center"
    android:orientation="vertical">

    <com.sds.android.ttpod.common.widget.IconTextView
        android:id="@+id/icon_no_data"
        android:layout_width="44dp"
        android:layout_height="44dp"
        app:text="@string/icon_search_result_no_song" />

    <TextView
        android:id="@+id/textview_load_failed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:text="@string/load_no_data"
        android:textColor="@color/listview_item_subtitle"
        android:textSize="16sp" />
</LinearLayout>
