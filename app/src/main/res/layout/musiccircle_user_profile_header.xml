<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:app1="http://schemas.android.com/apk/res/com.sds.android.ttpod" android:layout_width="match_parent" android:layout_height="250dp">
    <ImageView android:id="@+id/image_profile_cover" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/img_background_imageview_userinfo_cover" android:scaleType="centerCrop" android:contentDescription="@android:string/unknownName"/>
    <include android:id="@+id/user_profile_bottom" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" layout="@layout/musiccircle_user_header_bottom"/>
    <com.sds.android.ttpod.widget.UserAvatarView android:id="@+id/image_avatar" android:layout_width="@dimen/avatar_width" android:layout_height="@dimen/avatar_height" android:layout_marginLeft="20dp" android:layout_marginBottom="20dp" android:src="@drawable/img_avatar_default" android:scaleType="fitXY" android:layout_above="@+id/user_profile_bottom" android:contentDescription="@android:string/unknownName" app1:corner_radius="28dp"/>
    <TextView android:textSize="14sp" android:textColor="@android:color/white" android:gravity="center_vertical" android:id="@+id/text_profile_nick_name" android:background="@drawable/xml_background_my_list_header_nickname" android:paddingLeft="20dp" android:paddingRight="20dp" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="20dp" android:layout_marginLeft="8dp" android:layout_marginBottom="37dp" android:text="@string/login_register" android:layout_toRightOf="@+id/image_avatar" android:layout_above="@+id/user_profile_bottom"/>
    <com.sds.android.ttpod.widget.NetworkLoadView android:id="@+id/loading_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
</RelativeLayout>
