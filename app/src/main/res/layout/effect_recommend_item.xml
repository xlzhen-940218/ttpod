<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="#1f2223" android:layout_width="match_parent" android:layout_height="135dp">
    <RelativeLayout android:id="@+id/root_hit" android:background="@drawable/xml_background_myeffect_big" android:layout_width="match_parent" android:layout_height="90dp">
        <RelativeLayout android:id="@+id/layout_title" android:background="@drawable/xml_background_recommandeffect_item_title" android:layout_width="match_parent" android:layout_height="32dp">
            <com.sds.android.ttpod.widget.RoundRectImageView android:id="@+id/imageview_avatar" android:layout_width="24dp" android:layout_height="24dp" android:layout_margin="4dp" android:layout_marginLeft="6dp" android:src="@drawable/img_avatar_default" android:scaleType="fitCenter" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:contentDescription="@android:string/unknownName" app:frameWidth="2dp" app:frameColor="#b0ffffff"/>
            <RelativeLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/layout_title" android:layout_width="wrap_content" android:layout_height="29dp" android:layout_marginRight="6dp" android:layout_toRightOf="@+id/imageview_avatar">
                <TextView android:textSize="12sp" android:textColor="@color/effect_blue" android:gravity="center_vertical" android:id="@+id/textview_nickname" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Min.Yang"/>
                <ImageView android:id="@+id/imageview_level" android:layout_width="18dp" android:layout_height="18dp" android:layout_toRightOf="@+id/textview_nickname" android:layout_alignBottom="@+id/textview_nickname"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/layout_wave" android:background="@drawable/xml_background_recommandeffect_item" android:layout_width="match_parent" android:layout_height="73dp" android:layout_below="@+id/layout_title">
            <FrameLayout android:id="@+id/layout_wav" android:layout_width="210dp" android:layout_height="match_parent" android:layout_alignParentLeft="true">
                <RelativeLayout android:layout_width="match_parent" android:layout_height="60dp">
                    <TextView android:textSize="10sp" android:textColor="#ffffff" android:id="@+id/textview_effect_equalizer" android:background="#00000000" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:layout_marginTop="5dp" android:layout_marginBottom="2dp" android:text="流行POP" android:drawablePadding="4dp" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:drawableStart="@drawable/effect_white" style="@style/TextView_Effect_Small_Title"/>
                    <com.sds.android.ttpod.widget.audioeffect.EqualizerAnimationWaveView android:id="@+id/waveview_effect_equalizer_equ" android:paddingLeft="2dp" android:paddingTop="2dp" android:paddingRight="2dp" android:paddingBottom="1dp" android:layout_width="210dp" android:layout_height="66dp" android:layout_marginLeft="2dp" android:layout_marginRight="2dp" android:layout_marginBottom="2dp" android:layout_below="@+id/textview_effect_equalizer"/>
                </RelativeLayout>
            </FrameLayout>
            <LinearLayout android:orientation="horizontal" android:id="@+id/effect_boost_layer" android:paddingBottom="1dp" android:layout_width="match_parent" android:layout_height="match_parent" android:weightSum="3" android:layout_toRightOf="@+id/layout_wav" android:layout_alignParentRight="true">
                <RelativeLayout android:gravity="top" android:paddingTop="8dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
                    <TextView android:textSize="8sp" android:textColor="#ffffff" android:id="@+id/lay_1" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="4dp" android:text="@string/effect_bass" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
                    <com.sds.android.ttpod.widget.audioeffect.SmallRotatePic android:id="@+id/rotatebutton_bass_boost" android:layout_width="60dp" android:layout_height="60dp" android:layout_below="@+id/lay_1" android:layout_centerHorizontal="true"/>
                </RelativeLayout>
                <RelativeLayout android:gravity="top" android:paddingTop="8dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
                    <TextView android:textSize="8sp" android:textColor="#ffffff" android:id="@+id/lay_2" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="4dp" android:text="@string/effect_treble" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
                    <com.sds.android.ttpod.widget.audioeffect.SmallRotatePic android:id="@+id/rotatebutton_treble_boost" android:layout_width="60dp" android:layout_height="60dp" android:layout_below="@+id/lay_2" android:layout_centerHorizontal="true"/>
                </RelativeLayout>
                <RelativeLayout android:gravity="top" android:paddingTop="8dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
                    <TextView android:textSize="8sp" android:textColor="#ffffff" android:id="@+id/lay_3" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="4dp" android:text="@string/effect_virtualizer" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
                    <com.sds.android.ttpod.widget.audioeffect.SmallRotatePic android:id="@+id/rotatebutton_surround" android:layout_width="60dp" android:layout_height="60dp" android:layout_below="@+id/lay_3" android:layout_centerInParent="true" android:layout_centerHorizontal="true"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout android:gravity="center_vertical" android:background="@drawable/recommand_list_bg_3" android:layout_width="match_parent" android:layout_height="45dp" android:minHeight="25dp" android:layout_below="@+id/root_hit">
        <RelativeLayout android:gravity="center_vertical" android:id="@+id/layout_pickcount" android:paddingLeft="4dp" android:paddingRight="4dp" android:layout_width="200dp" android:layout_height="45dp" android:minHeight="33dp" android:layout_toLeftOf="@+id/layout_play" android:layout_alignParentLeft="true">
            <TextView android:textSize="10sp" android:textColor="#ffffff" android:ellipsize="end" android:id="@+id/textview_pickcount_body" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:maxWidth="90dp" android:text="" android:singleLine="true" android:drawablePadding="4dp" android:layout_alignParentLeft="true"/>
            <TextView android:textSize="10sp" android:textColor="#ffffff" android:id="@+id/textview_pickcount_body_tip" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:text="亲！觉得好就给个赞吧~" android:singleLine="true" android:drawablePadding="4dp" android:layout_toRightOf="@+id/textview_pickcount_body"/>
            <TextView android:textSize="10sp" android:textColor="#ffffff" android:gravity="left" android:id="@+id/textview_pickcount_tip" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="1dp" android:minWidth="20dp" android:text="觉得很赞" android:singleLine="true" android:layout_toRightOf="@+id/textview_pickcount_body_tip"/>
        </RelativeLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/layout_play" android:background="@drawable/xml_background_effect_recommand_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="40dp" android:layout_marginRight="10dp" android:minHeight="33dp" android:layout_alignParentRight="true" android:layout_centerVertical="true">
            <TextView android:textSize="10sp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/textview_pickcount" android:paddingBottom="2dp" android:layout_width="50dp" android:layout_height="32dp" android:text="赞" android:drawableLeft="@drawable/img_effect_recommand_pickcount" android:drawablePadding="1dp"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
