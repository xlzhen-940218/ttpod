<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/unicom_flow_background_color"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:background="@color/unicom_flow_line" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注意事项:"
        android:textColor="#828282"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textview_flow_faq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="6dp"
        android:text="@string/unicom_matters_attention"
        android:textColor="@color/unicom_flow_title_color"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/textview_server_detail"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_gravity="left"
        android:gravity="left"
        android:paddingTop="10dp"
        android:text="常见问题 &gt;&gt;"
        android:textColor="#6dcbed"
        android:textSize="14dp" />
</LinearLayout>
