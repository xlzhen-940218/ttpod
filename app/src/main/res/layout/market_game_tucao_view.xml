        <TextView android:textSize="16sp" android:textColor="@color/market_game_tucao_text_color" android:ellipsize="end" android:id="@+id/tucao_content_summary" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="2" android:layout_toLeftOf="@+id/tucao_browser_count" android:layout_centerVertical="true"/>
    </RelativeLayout>
</merge>
