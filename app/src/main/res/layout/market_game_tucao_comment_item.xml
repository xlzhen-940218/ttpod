<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="#e6e6e6" android:padding="10dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="12sp" android:textColor="#797979" android:id="@+id/txtFloorCount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
    <TextView android:textSize="12sp" android:textColor="#797979" android:id="@+id/txtDateTime" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:layout_alignParentRight="true"/>
    <TextView android:textSize="16sp" android:textColor="#797979" android:id="@+id/txtContent" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="" android:layout_below="@+id/txtFloorCount"/>
</RelativeLayout>
