<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textview_mediascan_filepicker_item_folder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@drawable/img_imageview_mediascan_item_folder_return"
        android:maxWidth="44dp"
        android:maxHeight="44dp" />

    <com.sds.android.ttpod.framework.modules.skin.view.AutoScrollableTextView
        android:id="@+id/textview_mediascan_filepicker_item_title"
        app:autoScrollEnable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/textview_mediascan_filepicker_item_folder"
        android:ellipsize="marquee"
        android:gravity="left"
        android:lines="1"
        android:singleLine="true"
        android:textColor="#ff222222"
        android:textSize="16sp"
        tools:ignore="EllipsizeMaxLines" />
</RelativeLayout>
