<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="53dp"
    android:background="#1d1f1f"
    android:minHeight="@dimen/list_item_height">

    <RelativeLayout
        android:id="@+id/layout_root"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@drawable/recommand_bj_xml">

        <RelativeLayout
            android:id="@+id/myeffect_left"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp">

            <ImageView
                android:id="@+id/head_playstatus"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/myeffect_item_hit"
                android:scaleType="fitCenter" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/myeffect_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/myeffect_left">

            <LinearLayout
                android:id="@+id/myeffect_gequ"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <com.sds.android.ttpod.framework.modules.skin.view.AutoScrollableTextView
                    android:id="@+id/textview_effect_equalizer_media"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="2dp"
                    android:drawablePadding="4dp"
                    android:ellipsize="marquee"
                    android:lines="1"
                    android:singleLine="true"
                    android:text="sdfd"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    app:autoScrollEnable="true" />

                <TextView
                    android:id="@+id/music_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:paddingLeft="6dp"
                    android:singleLine="true"
                    android:text="dfsdfsdf"
                    android:textColor="#80ffffff"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="6dp">

                <TextView
                    android:id="@+id/textview_effect_equalizer_content"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="6dp"
                    android:drawableRight="@drawable/xml_background_eq_match"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#a0ffffff"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
