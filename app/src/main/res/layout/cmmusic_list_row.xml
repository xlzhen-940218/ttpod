<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="86dp"
    android:background="@color/backgroundcolor_white"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/list_item_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/image_paying"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="#59aeef"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="3.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_resource_name"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingLeft="4dp"
                android:paddingTop="8dp"
                android:paddingBottom="1dp"
                android:textColor="#334046"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_resource_songer"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:lineSpacingExtra="1dp"
                android:maxLines="1"
                android:paddingLeft="6dp"
                android:paddingTop="3dp"
                android:paddingBottom="4dp"
                android:textColor="#909da2"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_soundplay"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:background="@drawable/cmmusic_shiting"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_soundbuy"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_marginLeft="22dp"
        android:background="@drawable/cmmusic_buy"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:paddingLeft="10dp" />

    <ImageView
        android:layout_width="18dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp" />
</LinearLayout>
